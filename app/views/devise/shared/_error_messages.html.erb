<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.comments.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% resource.errors.full_comments.each do |comment| %>
        <li><%= comment %></li>
      <% end %>
    </ul>
  </div>
<% end %>
