.chat__side
  .chat__side__header
    .chat__side__header__name
      = current_user.name
    .chat__side__header__cog
      = link_to new_group_path do
        = fa_icon 'edit', class: 'icon'
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'
  .chat__side__groups
    - current_user.groups.each do |group|  
      .chat__side__groups__group    
        = link_to group_comments_path(group) do
          .chat__side__groups__group__name
            = group.name
          .chat__side__groups__group__comments
            = group.show_last_comment 